{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["node", "express"],
    "resolveJsonModule": true
  },

  "include": ["src/**/*.ts", "src/**/*.js", "src/types/**/.d.ts"],

  "exclude": [
    "node_modules"
  ]
}

